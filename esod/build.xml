<project name="esod" default="dist" basedir=".">

  <property name="src" location="src"/>
  <property name="build" location="bin"/>
  <property name="dist" location="dist"/>
  <property name="debug" value="false"/>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="debug">
  	<property name="debug" value="true"/>
  </target>

  <target name="compile" depends="init" description="compile the source " >
    <javac debug="${debug}" debuglevel="source" srcdir="${src}" destdir="${build}"/>
  	<rmic classpath="${src}" classname="server.AgentHostImpl" base="${build}/server"/>
  	<rmic classpath="${src}" classname="server.agent.AgentImpl" base="${build}/server/agent"/>
  	<rmic classpath="${src}" classname="server.agent.AgentFactoryImpl" base="${build}/server/agent"/>
   	<rmic classpath="${src}" classname="server.mediator.MediatorImpl" base="${build}/server/mediator"/>
  </target>

  <target name="dist" depends="compile" description="generate the distribution" >
    <mkdir dir="${dist}"/>
    <jar jarfile="${dist}/esod.jar" basedir="${build}" manifest="META-INF/MANIFEST.MF"/>
  </target>

  <target name="clean" description="clean up" >
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
